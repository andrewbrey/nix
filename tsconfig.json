{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": ".out/tsc",
		"target": "ES2020",
		"declaration": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react",
		"pretty": true,
		"newLine": "lf",
		"stripInternal": true,
		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noEmitOnError": true,
		"useDefineForClassFields": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"paths": {
			"@global/env": ["src/scripts/global/environment"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"]
}
