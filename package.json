{
	"name": "nix",
	"description": "The simple noise mixer - create your perfect mixture of sounds to help productivity and focus.",
	"author": "Andrew Brey <34140052+andrewbrey@users.noreply.github.com>",
	"version": "1.0.2",
	"private": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/andrewbrey/nix.git"
	},
	"bugs": "https://github.com/andrewbrey/nix/issues",
	"scripts": {
		"postinstall": "touch node_modules/.gitkeep",
		"lint": "eslint . --fix",
		"test": "jest --passWithNoTests",
		"clean:chrome": "rimraf extensions/chrome/*",
		"clean:firefox": "rimraf extensions/firefox/*",
		"dev:chrome": "yarn clean:chrome && NODE_ENV=development TARGET=chrome webpack --config webpack.config.ts --watch",
		"dev:firefox": "yarn clean:firefox && NODE_ENV=development TARGET=firefox webpack --config webpack.config.ts --watch",
		"build:chrome": "NODE_ENV=production TARGET=chrome webpack --config webpack.config.ts",
		"build:firefox": "NODE_ENV=production TARGET=firefox webpack --config webpack.config.ts",
		"audit:chrome": "web-ext lint --source-dir ./extensions/chrome/",
		"audit:firefox": "web-ext lint --source-dir ./extensions/firefox/",
		"package:chrome": "web-ext build --source-dir ./extensions/chrome/ -a ./extensions/chrome/ && rename extensions/chrome/*.zip nix.zip",
		"package:firefox": "web-ext build --source-dir ./extensions/firefox/ -a ./extensions/firefox/",
		"releaseprep:chrome": "run-s clean:chrome build:chrome audit:chrome package:chrome",
		"releaseprep:firefox": "run-s clean:firefox build:firefox audit:firefox package:firefox",
		"release:chrome": "dotenv -- webstore upload --auto-publish --source extensions/chrome/nix.zip",
		"release:firefox": "dotenv -- web-ext-submit --source-dir ./extensions/firefox/ -a ./extensions/firefox/ -v"
	},
	"dependencies": {
		"@activejs/core": "0.2.3",
		"classnames": "2.2.6",
		"howler": "2.2.1",
		"lodash": "4.17.20",
		"react": "17.0.1",
		"react-dom": "17.0.1",
		"rxjs": "6.6.3",
		"webextension-polyfill-ts": "0.24.0"
	},
	"devDependencies": {
		"@types/chrome": "0.0.129",
		"@types/classnames": "2.2.11",
		"@types/copy-webpack-plugin": "6.4.0",
		"@types/firefox-webext-browser": "82.0.0",
		"@types/fs-extra": "9.0.6",
		"@types/howler": "2.2.1",
		"@types/jest": "26.0.20",
		"@types/lodash": "4.14.168",
		"@types/mini-css-extract-plugin": "1.2.2",
		"@types/node": "14.14.25",
		"@types/react": "17.0.1",
