		"@types/webpack-env": "1.16.0",
		"@typescript-eslint/eslint-plugin": "4.14.2",
		"@typescript-eslint/parser": "4.14.2",
		"autoprefixer": "10.2.4",
		"chalk": "4.1.0",
		"chrome-webstore-upload-cli": "1.2.1",
		"copy-webpack-plugin": "7.0.0",
		"css-loader": "5.0.1",
		"dotenv-cli": "4.0.0",
		"eslint": "7.19.0",
